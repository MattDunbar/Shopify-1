{% comment %}
  Use the uploaded logo from theme settings if enabled.
  Site name gets precedence with H1 tag on homepage, div on other pages.
{% endcomment %}
{% if template == 'index' %}
  <h1 class="h4 flush site-header__logo left" itemscope itemtype="http://schema.org/Organization">
{% else %}
  <div class="h4 flush site-header__logo left" itemscope itemtype="http://schema.org/Organization">
{% endif %}
  {% if settings.logo_use_image %}
    <a href="https://newspring.cc" itemprop="url" class="site-header__logo-link">
      <img src="{{ 'logo.png' | asset_url }}" alt="{{ shop.name }}" itemprop="logo">
    </a>
  {% else %}
    <a href="https://newspring.cc" itemprop="url">{{ shop.name }}</a>
  {% endif %}
{% if template == 'index' %}
  </h1>
{% else %}
  </div>
{% endif %}

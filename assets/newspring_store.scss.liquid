/*--------------------------------
        BASE VARIABLES
--------------------------------*/

$base-spacing-unit: 60px;
$handheld: 768px; //max
$portable: 769px; //min
$anchored: 1025px; //min


/* ---------------- COLORS ----------------*/
$newspring-primary:    #6BAC43!default;
$newspring-secondary:  #1c683e!default;
$newspring-tertiary:   #2a4930!default;

$primary-color:    $newspring-primary!default;
$secondary-color:  $newspring-secondary!default;
$tertiary-color:   $newspring-tertiary!default;

$drawer-color:     black;
$dark-color:       #1c1c1c!default;
$medium-color:     #858585!default;
$light-color:      white!default;
$footer-hr-color: #363636;
$hr-color:         #e6e6e6;

$border-color:     #eeeeee;

$gray-primary:     #dddddd;
$gray-secondary:   #858585;
$gray-tertiary:    #303030;

$facebook:	        #42599e!default;
$twitter:	   	    #55acee!default;
$google:            #DD4B39!default;
$instagram:	        #3f729b!default;
$linkedin:          #0976b4!default;
$youtube:           #b31217!default;
$pinterest:         #be0a21!default;

$alert-color:       #C64F55!default;
$info-color:        #1698DA!default;

/* ---------------- FONTS ----------------*/

$base-heading-font:   "colfax-web", sans-serif!default;
$base-body-copy-font: 'ff-meta-serif-web-pro', serif!default;

$font-size:           22px!default;
$base-font-size:      $font-size;
$line-height:         30px!default;
$base-line-height:    $line-height;
$icon-size:           48px!default;
$base-icon-size:      $icon-size;

$handheld-font-size:      20px!default;
$handheld-line-height:    26px!default;

$h1:      ($font-size * 2.8)!default;
$h2:      ($font-size * 2.4)!default;
$h3:      ($font-size * 1.5)!default;
$h4:      ($font-size * 1.3)!default;
$h5:      ($font-size * 1.2)!default;
$h6:      ($font-size * .9)!default;

$handheld-h1:            ($font-size * 2)!default;
$handheld-h2:            ($font-size * 1.6)!default;
$handheld-h3:            ($font-size * 1.4)!default;
$handheld-h4:            ($font-size * 1.3)!default;
$handheld-h5:            ($font-size * 1.2)!default;
$handheld-h6:            ($font-size * 1.1)!default;

/* ---------------- BORDERS ----------------*/
$border-radius: 	2px!default;
$border-size: 		3px!default;


/*--------------------------------
            STYLES
--------------------------------*/

/* ---------------- BASIC ---------------- */

body {
    font-family: $base-body-copy-font;
}

.shell {
    padding-top: $base-spacing-unit;
    padding-left: $base-spacing-unit*2;
    padding-right: $base-spacing-unit*2;
}

.shadow-wrapper {
    max-width: 1680px;
    margin-left: auto;
    margin-right: auto;
    -webkit-box-shadow: 0 0 25px rgba(0,0,0,.1);
    -moz-box-shadow: 0 0 25px rgba(0,0,0,.1);
    box-shadow: 0 0 25px rgba(0,0,0,.1);
}

.inline {
    display: inline-block!important;
}

.block {
    display: block;
}

.text-bold {
    font-weight: 500;
}

.relative {
    position:relative;
}

/* ---------------- BODY COPY ----------------*/
p {
    font-family: $base-body-copy-font;
    font-size: $font-size;
    line-height: $line-height;
    margin-bottom: $base-spacing-unit/2;

    &.colfax, *.colfax {
        font-family: $base-heading-font;
        letter-spacing: -.5px;
    }

    @media screen and (max-width: $handheld){
        font-size: $handheld-font-size;
        line-height: $handheld-line-height;
    }
}

b, strong {
    font-weight: 600;
}

small {
    font-size: $font-size * .87;
    line-height: $line-height * .87;
    display: inline-block;

    a {
        font-size: $font-size * .87;
        line-height: $line-height * .87;
    }

    @media screen and (max-width: $handheld){
        font-size: $font-size*.8;
        line-height: $line-height*.8;

        a {
            font-size: $font-size*.8;
            line-height: $line-height*.8;
        }
    }
}

.uppercase {
    text-transform: uppercase;
}

.colfax {
    font-family: $base-heading-font;
    letter-spacing: -.5px;
}

/* ---------------- LINKS ----------------*/
a {
    color: $primary-color;
    &:hover {
        color: darken($primary-color, 15);
    }
}

.link {
    color: $primary-color;
    &:hover {
        color: darken($primary-color, 15);
    }
}

/* ---------------- BUTTONS ----------------*/
.ns-btn {
    font-family: colfax-web,sans-serif;
    color: $primary-color;
    border: 3px solid $primary-color;
    padding: 12px 48px;
    font-weight: 700;
    font-size: 20.4px;
    line-height: 32px;
    letter-spacing: 1px;
    cursor: pointer;
    position: relative;
    vertical-align: middle;
    display: inline-block;
    text-decoration: none;
    text-transform: uppercase;
    text-align: center;
    overflow: hidden;
    border-radius: 1000px;
    transition: all,.1s ease-in-out;
    &:hover {
        background-color: $primary-color;
        color: $light-color;
    }
    &.light {
        color: $light-color;
        border: 3px solid $light-color;
        &:hover {
            background-color: $light-color;
            color: $secondary-color!important;
        }
    }
    &.rect {
        border-radius: 0;
    }
}

/* ---------------- HR ----------------*/
hr {
    border-top: 2px solid $hr-color;
}

.hr-bottom {
    border-bottom: 2px solid $hr-color;
}

/* ---------------- HEADERS ----------------*/
h1, h2, h3, h4, h5, h6 {
    font-family: $base-heading-font;
    font-weight: 600;
    letter-spacing: -.5px;
    color: $dark-color;

    a {
        color: $dark-color;
        &:hover {
            color: lighten($dark-color, 10);
        }
    }
}

h1 {
    font-size: $h1;
    line-height: $h1*1.05;
    position: relative;
    margin-bottom: $base-spacing-unit/2;

    @media screen and (max-width: $handheld){
        font-size: $handheld-h1;
        line-height: $handheld-h1;
    }
}

h2 {
    font-size: $h2;
    line-height: $h2*1.1;
    margin-bottom: $base-spacing-unit/2;

    @media screen and (max-width: $handheld){
        font-size: $handheld-h2;
        line-height: $handheld-h2;
    }
}

h3 {
    font-size: $h3;
    line-height: $h3*1.1;
    margin-bottom: $base-spacing-unit/2;

    @media screen and (max-width: $handheld){
        font-size: $handheld-h3;
        line-height: $handheld-h3*1.2;
    }
}

h4 {
    font-size: $h4;
    line-height: $h4*1.1;
    margin-bottom: $base-spacing-unit/2;

    @media screen and (max-width: $handheld){
        font-size: $handheld-h4;
        line-height: $handheld-h4;
    }
}

h5 {
    font-size: $h5;
    line-height: $h5*1.1;
    margin-bottom: $base-spacing-unit/2;

    @media screen and (max-width: $handheld){
        font-size: $handheld-h5;
        line-height: $handheld-h5;
    }
}

h6 {
    font-size: $h6;
    line-height: $h6*1.25;
    margin-bottom: $base-spacing-unit/2;

    @media screen and (max-width: $handheld){
        font-size: $handheld-h6;
        line-height: $handheld-h6;
    }
}

.h1 { @extend h1; }
.h2 { @extend h2; }
.h3 { @extend h3; }
.h4 { @extend h4; }
.h5 { @extend h5; }
.h6 { @extend h6; }


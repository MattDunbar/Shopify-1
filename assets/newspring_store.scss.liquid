    font-size: $base-font-size*.9;
}

/* ---------------- FOOTER ---------------- */
footer {
    font-family: "colfax-web", sans-serif;

    .wrapper {
        padding-top: $base-spacing-unit/2;
        background-color: $dark-color;
        a:hover {
            color: $light-color;
        }
    }

    h5 {
        padding-bottom: 10px;
        border-bottom: 3px solid $footer-hr-color;
        margin-bottom: $base-spacing-unit/4;
        width: 100%;
        font-size: $base-font-size;
    }

    ul {
        list-style: outside;
        list-style-type: none;
        max-width: none;
        margin: 0px;

        li {
            margin: 0px;
            font-family: $base-heading-font;
            font-size: $base-font-size*.9;
            line-height: $base-line-height;
            font-weight: 500;
            color: darken($light-color, 30);
            padding: 5px 0;

            a, span {
                display: inline-block;
            }
        }
    }

    hr {
        border-top: 3px solid $footer-hr-color!important;

    }

    small {
        font-weight: 500;
        font-size: $base-font-size*.7;
        line-height: $base-line-height;
        a {
            font-size: $base-font-size*.7;
            line-height: $base-line-height*.7;
        }
    }
}


<!-- begin site-nav -->
<ul class="site-nav" id="AccessibleNav">
    <!-- 1100px wide and up -->
    <span class="xxl--show xl--hide" id="desktop-wide-nav">
        {% for link in linklists.main-menu.links %}<!--

        *** ADDITIONAL COMMENTS TO REMOVE WHITESPACE ***

        {% comment %}
          Create a dropdown menu by naming a linklist the same as a link in the parent nav

          More info on dropdowns:
            - http://docs.shopify.com/manual/your-website/navigation/create-drop-down-menu
        {% endcomment %}
    -->{% assign child_list_handle = link.title | handleize %}<!--
    -->{% if linklists[child_list_handle].links != blank %}<!--
    --><li class="site-nav--has-dropdown{% if link.active %} site-nav--active{% endif %}" aria-haspopup="true">
            <a href="{{ link.url }}" class="site-nav__link xxl--nav-link">
              {{ link.title }}
              <span class="icon icon-arrow-down" aria-hidden="true"></span>
            </a>
            <ul class="site-nav__dropdown">
              {% for childlink in linklists[child_list_handle].links %}
                <li{% if childlink.active %} class="site-nav--active"{% endif %}>
                  <a href="{{ childlink.url }}" class="site-nav__link xxl--nav-link">{{ childlink.title | escape }}</a>
                </li>
              {% endfor %}
            </ul>
        </li><!--
        -->{% else %}<!--
        --><li {% if link.active %}class="site-nav--active"{% endif %}>
            <a href="{{ link.url }}" class="site-nav__link xxl--nav-link">{{ link.title }}</a>
        </li><!--
        -->{% endif %}<!--
        -->{% endfor %}
    </span>
    <!-- for 1024-1099 -->
    <span class="xl--show xxl--hide" id="desktop-narrow-nav">
        {% for link in linklists.main-menu.links %}
        {% comment %}
          Create a dropdown menu by naming a linklist the same as a link in the parent nav

          More info on dropdowns:
            - http://docs.shopify.com/manual/your-website/navigation/create-drop-down-menu
        {% endcomment %}
        {% assign child_list_handle = link.title | handleize %}
        {% if linklists[child_list_handle].links != blank %}
          <li class="site-nav--has-dropdown{% if link.active %} site-nav--active{% endif %}" aria-haspopup="true">
            <a href="{{ link.url }}" class="site-nav__link xl--nav-link">
              {{ link.title }}
              <span class="icon icon-arrow-down" aria-hidden="true"></span>
            </a>
            <ul class="site-nav__dropdown">
              {% for childlink in linklists[child_list_handle].links %}
                <li{% if childlink.active %} class="site-nav--active"{% endif %}>
                  <a href="{{ childlink.url }}" class="site-nav__link xl--nav-link">{{ childlink.title | escape }}</a>
                </li>
              {% endfor %}
            </ul>
          </li>
        {% else %}
          <li {% if link.active %}class="site-nav--active"{% endif %}>
            <a href="{{ link.url }}" class="site-nav__link xl--nav-link">{{ link.title }}</a>
          </li>
        {% endif %}
        {% endfor %}
    </span>
</ul>
